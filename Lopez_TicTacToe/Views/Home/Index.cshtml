@{
    ViewData["Title"] = "Tic-Tac-Toe";
}

<div class="container">
    <h1>Tic-Tac-Toe</h1>

    <div class="game-controls">
        <button id="multiplayerBtn" class="btn-mode active">Multiplayer</button>
        <button id="singlePlayerBtn" class="btn-mode">Single Player</button>
    </div>

    <div id="gameBoard">
        @for (int i = 0; i < 9; i++)
        {
            <div class="cell" data-index="@i"></div>
        }
    </div>

    <div class="game-controls">
        <button id="resetBtn">Reset Game</button>
    </div>

    <div class="stats">
        <div>X Wins: <span id="xWins">0</span></div>
        <div>O Wins: <span id="oWins">0</span></div>
        <div>Draws: <span id="draws">0</span></div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.0/signalr.min.js"></script>
<script src="~/js/game.js"></script>